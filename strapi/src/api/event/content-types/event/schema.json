{
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "All orchestra events (upcoming and past)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext"
    },
    "eventInfo": {
      "type": "text",
      "required": false
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "location": {
      "type": "string",
      "required": false
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false
    }
  }
}
